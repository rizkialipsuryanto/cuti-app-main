<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basemuda"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/no_cuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="No Cuti : loading..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="HY"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/gray_muda_banget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LOADING"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawableTint="?attr/colorControlNormal"
                    android:drawablePadding="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black_tua_hehe" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutKeteranganBus"
                android:visibility="gone"
                android:background="@color/gray_muda_banget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/namaBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LOADING"
                    android:drawableStart="@drawable/ic_baseline_directions_bus_24"
                    android:drawablePadding="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black_tua_hehe" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutNamaUser"
                android:background="@color/gray_muda_banget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/namaUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LOADING"
                    android:drawableStart="@drawable/ic_baseline_person_outline_24"
                    android:drawableTint="?attr/colorControlNormal"
                    android:drawablePadding="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black_tua_hehe" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutStatusBooking"
                android:background="@color/gray_muda_banget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/tglCuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:drawableStart="@drawable/ic_baseline_sticky_note_2_24"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTint="?attr/colorControlNormal"
                    android:gravity="center_vertical"
                    android:text="Tanggal Cuti: loading..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black_tua_hehe"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutStatusBayar"
                android:background="@color/gray_muda_banget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:drawableStart="@drawable/ic_baseline_sticky_note_2_24"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTint="?attr/colorControlNormal"
                    android:gravity="center_vertical"
                    android:text="Status: loading..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black_tua_hehe"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/LOADING"
                    android:textSize="@dimen/sp_14"
                    android:gravity="end"
                    android:layout_weight="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>